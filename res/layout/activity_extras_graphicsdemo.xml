<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fhwedel_logo"
    >
<ScrollView
	android:layout_width="match_parent" android:id="@+id/scrollView1"
	android:layout_height="match_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent">

		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent" android:text="@string/txt_extras_graphics_header"
			android:gravity="center" android:layout_height="wrap_content"
			android:layout_marginTop="20dip" android:layout_marginBottom="20dip" />

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<TextView android:id="@+id/txt_extras_graphics_diagram"
				android:layout_weight="6" android:text="@string/txt_extras_graphics_diagram"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:drawableLeft="@android:drawable/ic_dialog_info"
				android:drawablePadding="3dp" android:gravity="center_vertical|left"
				style="@android:style/TextAppearance.Medium" android:layout_gravity="center_vertical|left" />
			<LinearLayout android:id="@+id/linearLayout2"
				android:layout_weight="1" android:layout_width="wrap_content"
				android:gravity="right" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|right">
				<ToggleButton android:text="ToggleButton"
					android:checked="false" android:onClick="onButtonClick"
					android:id="@+id/btn_extras_graphics_togglediagram"
					android:layout_width="match_parent" android:layout_height="match_parent" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent" android:id="@+id/lay_2d_demo"
			android:layout_height="wrap_content" android:orientation="vertical" />


		<LinearLayout android:layout_marginTop="10dp"
			android:layout_height="wrap_content" android:layout_width="match_parent">
			<TextView android:id="@+id/txt_extras_graphics_touch"
				android:text="@string/txt_extras_graphics_touch"
				android:layout_height="wrap_content" android:layout_width="match_parent" 
				android:layout_weight="6" android:gravity="center_vertical"
				android:drawableLeft="@android:drawable/ic_dialog_info"
				android:layout_gravity="center_vertical|left"
				android:drawablePadding="3dp" style="@android:style/TextAppearance.Medium" />
			<LinearLayout android:id="@+id/linearLayout2"
				android:layout_weight="1" android:layout_width="wrap_content"
				android:gravity="right" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|right">
				<ToggleButton android:text="ToggleButton"
					android:checked="false" android:onClick="onButtonClick"
					android:id="@+id/btn_extras_graphics_toggletouch"
					android:layout_width="match_parent" android:layout_height="match_parent" />
			</LinearLayout>
		</LinearLayout>
		<de.fhwedel.androidapp.customviews.CustomViewForTouchDraw
			android:layout_marginTop="10dp"
			android:id="@+id/cv_extras_graphics_touch" android:layout_width="match_parent"
			android:layout_height="200dip" />


		<LinearLayout android:layout_marginTop="10dp"
			android:layout_height="wrap_content" android:layout_width="match_parent">
			<TextView android:id="@+id/txt_extras_graphics_anim"
				android:text="@string/txt_extras_graphics_anim"
				android:layout_height="wrap_content" android:layout_width="match_parent" 
				android:layout_weight="6" android:gravity="center_vertical"
				android:drawableLeft="@android:drawable/ic_dialog_info"
				android:layout_gravity="center_vertical|left"
				android:drawablePadding="3dp" style="@android:style/TextAppearance.Medium" />
			<LinearLayout android:id="@+id/linearLayout2"
				android:layout_weight="1" android:layout_width="wrap_content"
				android:gravity="right" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|right">
				<ToggleButton android:text="ToggleButton"
					android:checked="false" android:onClick="onButtonClick"
					android:id="@+id/btn_extras_graphics_toggleanim"
					android:layout_gravity="right" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
		<ImageView android:src="@drawable/androidtrans" android:id="@+id/img_extras_graphics_android"
			android:layout_width="200dp" android:layout_height="200dp"
			android:layout_gravity="center_horizontal" android:scaleType="fitXY"
			android:clickable="true" android:onClick="onImgClick" android:layout_marginTop="10dp"/>


		<LinearLayout android:layout_marginTop="10dp"
			android:layout_height="wrap_content" android:layout_width="match_parent">
			<TextView android:id="@+id/txt_media_video" android:text="@string/txt_media_video"
				android:layout_height="wrap_content" android:layout_width="match_parent" 
				android:layout_weight="6" android:gravity="center_vertical"
				android:drawableLeft="@android:drawable/ic_dialog_info"
				android:layout_gravity="center_vertical|left"
				android:drawablePadding="3dp" style="@android:style/TextAppearance.Medium" />
			<LinearLayout android:id="@+id/linearLayout2"
				android:layout_weight="1" android:layout_width="wrap_content"
				android:gravity="right" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|right">
				<ToggleButton android:text="ToggleButton"
					android:checked="false" android:onClick="onButtonClick"
					android:id="@+id/btn_media_togglevideo" android:layout_gravity="right"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
		<VideoView android:id="@+id/vv_media_video" android:layout_marginTop="10dp"
			android:visibility="gone" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="center" />
			
		<TextView android:layout_width="wrap_content" android:layout_marginTop="20dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/tv_graphics_activity" android:layout_height="match_parent"
			android:gravity="bottom" android:layout_gravity="bottom" />

	</LinearLayout>

</ScrollView>

</LinearLayout>